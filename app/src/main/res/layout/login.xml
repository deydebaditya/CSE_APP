<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context="com.iashwin28.gecacse.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/imageView"-->
            <!--android:layout_marginTop="85dp"-->
            <!--android:background="@drawable/ic_launcher"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true" />-->

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Roll Number"
            android:id="@+id/editText"
            android:padding="15dp"
            android:textColorHint="#6affffff"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"
            android:gravity="left"
            android:theme="@style/myEdittexttheme"
            android:focusableInTouchMode="true"
            android:layout_alignParentTop="false"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/title" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:id="@+id/editText2"
            android:padding="15dp"
            android:textColorHint="#6affffff"
            android:layout_below="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1dp"
            android:textColor="#fff"
            android:layout_alignRight="@+id/editText"
            android:layout_alignEnd="@+id/editText"
            android:theme="@style/myEdittexttheme"
            android:focusableInTouchMode="true"
            android:layout_centerVertical="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:background="@drawable/signup_btn_transp"
            android:id="@+id/button"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/editText2"
            android:padding="6dp"
            android:onClick="signin"
            android:nestedScrollingEnabled="true"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="So many students use our App! Why don&apos;t you?"
            android:id="@+id/textView"
            android:textColor="#beffffff"
            android:layout_above="@+id/button2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/forgot"
            android:gravity="bottom"
            android:layout_marginTop="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/button2"
            android:onClick="signup"
            android:background="@drawable/signup_btn_transp"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Student Login"
            android:id="@+id/title"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:textColor="#ffffff"

            android:textStyle="bold|normal|italic"
            android:textSize="50dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password? Eat almonds everyday!"
            android:id="@+id/forgot"
            android:textColor="#beffffff"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:onClick="forgot" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/middle"/>


</RelativeLayout>
